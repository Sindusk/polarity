<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="menu" controller="sin.appstates.MenuState">
        <layer id="background" backgroundColor="#000f" childLayout="vertical">
            <panel height="20%"/>
            <panel id="menu.start" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true" />
                </effect>
                <text font="Interface/Fonts/Batman26.fnt" color="#000f" text="Start Game" />
                <interact onClick="action(start)"/>
            </panel>
            <panel height="5%"/>
            <panel id="menu.multiplayer" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true" />
                </effect>
                <text font="Interface/Fonts/Batman26.fnt" color="#000f" text="Multiplayer (NYI)" />
            </panel>
            <panel height="5%"/>
            <panel id="menu.options" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true" />
                </effect>
                <text font="Interface/Fonts/Batman26.fnt" color="#000f" text="Options" />
                <interact onClick="action(options)"/>
            </panel>
            <panel height="5%"/>
            <panel id="menu.quit" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true" />
                </effect>
                <text font="Interface/Fonts/Batman26.fnt" color="#000f" text="Quit Game" />
                <interact onClick="action(quit)"/>
            </panel>
        </layer>
    </screen>
    <screen id="menu.options" controller="sin.appstates.MenuState">
        <layer id="background" backgroundColor="#000f" childLayout="vertical">
            <panel height="5%" />
            <text text="Options" height="5%" font="Interface/Fonts/Batman26.fnt" color="#000f" align="center" />
            <panel height="5%" />
            <panel height="7%" childLayout="horizontal">
                <text text="Resolution: " font="Interface/Fonts/Batman26.fnt" width="300" align="right" />
                <control id="options.resolution" name="dropDown" width="20%" visibleToMouse="true" />
            </panel>
            <panel height="7%" childLayout="horizontal">
                <text text="Fullscreen: " font="Interface/Fonts/Batman26.fnt" width="300" />
                <control id="options.fullscreen" name="checkbox" height="20" width="20" visibleToMouse="true" />
            </panel>
            <panel height="7%" childLayout="horizontal">
                <text text="Vertical Sync: " font="Interface/Fonts/Batman26.fnt" width="300" align="right" />
                <control id="options.verticalsync" name="checkbox" height="20" width="20" visibleToMouse="true" />
            </panel>
            <panel height="30%" />
            <panel id="options.back" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true" />
                </effect>
                <text font="Interface/Fonts/Batman26.fnt" color="#000f" text="Back" />
                <interact onClick="action(options.back)"/>
            </panel>
        </layer>
    </screen>
    <screen id="empty"></screen>
</nifty>
