<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="sin.appstates.MenuState">
        <layer id="background" backgroundColor="#000f" childLayout="vertical">
            <panel height="25%"></panel>
            <panel id="menu.start" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/Batman26.fnt" color="#000f" text="Start Game" />
                <interact onClick="startGame()"/>
            </panel>
            <panel height="5%"/>
            <panel id="menu.multiplayer" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/Batman26.fnt" color="#000f" text="Multiplayer (NYI)" />
            </panel>
            <panel height="5%"/>
            <panel id="menu.quit" height="10%" width="40%" backgroundColor="#800f" childLayout="center" align="center" visibleToMouse="true">
                <effect>
                    <onHover name="pulsate" startColor="#8000" endColor="#d00f" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/Batman26.fnt" color="#000f" text="Quit" />
                <interact onClick="quitGame()"/>
            </panel>
        </layer>
    </screen>
    <screen id="empty"></screen>
</nifty>
